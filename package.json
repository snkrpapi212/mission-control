{
  "name": "mission-control",
  "version": "1.0.0",
  "description": "Multi-agent AI squad manager built on Convex + Next.js",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "NODE_ENV=development next lint",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage && vitest run --config vitest.config.convex.ts --coverage",
    "test:convex": "vitest run --config vitest.config.convex.ts",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm test && npm run typecheck",
    "daemon:start": "pm2 start ecosystem.config.cjs",
    "daemon:stop": "pm2 stop mc-notifications",
    "daemon:restart": "pm2 restart mc-notifications",
    "daemon:logs": "pm2 logs mc-notifications",
    "daemon:status": "pm2 status",
    "daemon:delete": "pm2 delete mc-notifications",
    "test:all": "vitest run && vitest run --config vitest.config.convex.ts"
  },
  "keywords": [
    "ai",
    "agents",
    "convex",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "convex": "^1.13.0",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.19.33",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.24",
    "convex-test": "^0.0.41",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^23.0.1",
    "pm2": "^5.4.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^1.6.1"
  }
}
